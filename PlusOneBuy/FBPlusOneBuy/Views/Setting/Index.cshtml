@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Dictionary<string, string> liveIDList = ViewData["liveIDList"] as Dictionary<string, string>;
    List<FBPlusOneBuy.Models.Product> products = ViewData["product"] as List<FBPlusOneBuy.Models.Product>;
}

<div class="container-fluid">
    <div class="row header">
        <h1 class="ml-3">PlusOneBuy</h1>
    </div>
</div>
<form action="~/list/index" method="post">
    <div class="container">
        <div class="row mt-3">
            <div class="col-3"></div>
            <div class="col">
                <div class="dropdown">
                    <label>直播影片:</label>
                    <button class="btn border-info dropdown-toggle ml-4" type="button" id="dropdownMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        直播影片
                    </button>
                    <input type="hidden" name="liveID" id="liveID">
                    <div class="dropdown-menu" aria-labelledby="dropdownMenu">
                        @foreach (var item in liveIDList)
                        {
                            if (@item.Value == null)
                            {
                                <button class="dropdown-item" type="button" value="@item.Key">@item.Key</button>
                            }
                            else
                            {
                                <button class="dropdown-item" type="button" value="@item.Key">@item.Value</button>
                            }

                        }
                    </div>
                </div>
                <br>
                @foreach (var item in products)
                {
                    <label>直播商品:</label>
                    <input type="text" class="formtext ml-4" name="ProductName" value="@item.ProductName">
                    <br />
                    <label>留言關鍵字:</label>
                    <input class="formtext" name="keyWord" value="@item.keyword" /><br>
                }
                <label>驗證粉絲團:</label>
                <button id="btn_managePages" type="button" class="btn btn-info btn-sm ml-2" onclick="getAuth()">登入</button>
                <br />
                <button id="btn_submit" class="btn btn-primary mt-3"><i class="far fa-hand-point-right"></i>送出</button>
            </div>
            <div class="col-3"> </div>
        </div>
    </div>
</form>
@section EndJS
{
    <script>
        var clkbool = false;
        $(document).ready(function () {
            $('.dropdown-item').click(function () {
                $('#dropdownMenu').text($(this).text())
                $('#liveID').val($(this).val())
            })
            $('#btn_submit').click(function () {
                if ($('#dropdownMenu').text().trim() == "直播影片") {
                    alert("請選擇直播影片")
                    return false;
                }
                else if ($('input[name="keyWord"]').val() == "") {
                    alert("請輸入關鍵字")
                    return false;
                }
                else if (clkbool != true) {
                    alert("請驗證粉絲團")
                    return false;
                }
                else {
                    $("input").prop("disabled", false);
                    document.form.onsubmit();
                }

            })
        });       
        function getAuth() {
            FB.login(function (response) {
                if (response.status === 'connected') {
                    clkbool = true;
                    console.log(response.authResponse.accessToken);
                }
            }, {
                    auth_type: 'rerequest',
                    scope: "manage_pages",
                    return_scopes: true
                });
        }
    </script>

}
@section TopJS
{
    <script>
        window.fbAsyncInit = function () {
            FB.init({
                appId: '1320980108059770',
                cookie: true,
                xfbml: true,
                version: 'v3.3'
            });

            FB.AppEvents.logPageView();

        };

        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) { return; }
            js = d.createElement(s); js.id = id;
            js.src = "https://connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
    <script async defer src="https://connect.facebook.net/en_US/sdk.js"></script>
}

