@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Dictionary<string, string> liveIDList = ViewData["liveIDList"] as Dictionary<string, string>;
    List<FBPlusOneBuy.Models.Product> products = ViewData["product"] as List<FBPlusOneBuy.Models.Product>;
}

<div class="container-fluid">
    <div class="row header">
        <img src="~/Assets/images/91app_developer.png" />
    </div>
</div>
<form action="~/list/index" method="post">
    <div class="container">
        <div class="row mt-3">
            <div class="col-6">
                <label><strong>挑選商品</strong></label><hr />
                <small>商品編號 </small>
                <input class="Idtext" value="" />
                <button type="button" class="btn btn-secondary"><i class="fas fa-search"></i></button>
                <br>
                <label><strong>直播商品</strong></label>
                <table class="table">
                    <thead>
                        <tr>
                            <th>商品</th>
                            <th>關鍵字</th>
                            <th>價格</th>
                            <th>庫存</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in products)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td><input class="formtext" name="keyWord" value="@item.keyword" /></td>
                                <td>@String.Format("{0:N0}", @item.UnitPrice)</td>
                                <td>@item.Stock</td>
                            </tr>
                        }
                    </tbody>
                </table>


            </div>
            <div class="col">
                <div class="dropdown">
                    <label>直播影片:</label>
                    <button class="btn border-info dropdown-toggle ml-4" type="button" id="dropdownMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        直播影片
                    </button>
                    <input type="hidden" name="liveID" id="liveID">
                    <div class="dropdown-menu" aria-labelledby="dropdownMenu">
                        @foreach (var item in liveIDList)
                        {
                            if (@item.Value == null)
                            {
                                <button class="dropdown-item" type="button" value="@item.Key">@item.Key</button>
                            }
                            else
                            {
                                <button class="dropdown-item" type="button" value="@item.Key">@item.Value</button>
                            }

                        }
                    </div>
                </div>
                <br>
                <button id="btn_submit" class="btn btn-primary mt-3"><i class="far fa-hand-point-right"></i>送出</button>
            </div>
        </div>
    </div>
</form>
@section EndJS
{
    <script>
        $(document).ready(function () {
            $('.dropdown-item').click(function () {
                $('#dropdownMenu').text($(this).text())
                $('#liveID').val($(this).val())
            })
            $('#btn_submit').click(function () {
                if ($('#dropdownMenu').text().trim() == "直播影片") {
                    alert("請選擇直播影片")
                    return false;
                }
                else if ($('input[name="keyWord"]').val() == "") {
                    alert("請輸入關鍵字")
                    return false;
                }
                else {
                    $("input").prop("disabled", false);
                    document.form.onsubmit();
                }

            })
        });

    </script>
}
