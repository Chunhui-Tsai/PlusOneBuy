@model FBPlusOneBuy.ViewModels.SalesOrderViewModel
@{
    ViewBag.Title = "SalesOrderList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<span class="h4 font-weight-normal text-muted">報告</span>
<span>/</span>
<a class="h4 font-weight-normal text-muted" href="@Url.Action("Index","Report")">直播清單</a>
<span>/</span>
<span class="h4 font-weight-normal text-muted">銷售清單</span>

<div class="container">
    <div class="row mt-3">
        <div class="col">
            <span>直播名稱: @Model.livename</span>
            <span>成交數量: @Model.salesOrderNum</span>
            <span>成交金額 @String.Format("{0:N0}", Model.total)</span>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table id="myTable" class="cell-border compact stripe" style="width:100%">
                <thead>
                    <tr>
                        <th>銷售編號</th>
                        <th>產品名稱</th>
                        <th>客戶名稱</th>
                        <th>成立時間</th>
                        <th>數量</th>
                        <th>總額</th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < Model.salesOrders.Count; i++)
                    {
                        <tr>
                            <td>@Model.salesOrders[i].SalesOrderID</td>
                            <td>@Model.salesOrders[i].ProductName</td>
                            <td>@Model.salesOrders[i].CustomerName</td>
                            <td>@Model.salesOrders[i].CheckoutDateTime</td>
                            <td>@Model.salesOrders[i].Quantity</td>
                            <td>@String.Format("{0:N0}", Model.total)</td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section EndJS
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.6.10/vue.min.js"
            integrity="sha256-chlNFSVx3TdcQ2Xlw7SvnbLAavAQLO0Y/LBiWX04viY=" crossorigin="anonymous"></script>
    <!-- DataTable -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "info": false, "bLengthChange": false, "pageLength": 10
            });
        });
    </script>
}