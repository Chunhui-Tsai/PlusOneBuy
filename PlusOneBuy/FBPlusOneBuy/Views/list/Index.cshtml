                            <th>關鍵字</th>
                            <th>價格</th>
                            <th>庫存</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (products != null)
                        {
                            for (int i = 0; i < products.Count; i++)
                            {
                                <tr>
                                    <td>@products[i].ProductName</td>
                                    <td>@products[i].keyword</td>
                                    <td>@String.Format("{0:N0}", products[i].UnitPrice)</td>
                                    <td>@products[i].Stock</td>
                                </tr>
                            }
                        }


                    </tbody>
                </table>
            </div>
            <div class="col-6">
                <h3>留言清單</h3>
                <table id="ListTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>OrderID</th>
                            <th>CustomerName</th>
                            <th>Keyword</th>
                            <th>ProductName</th>
                            <th>Quantity</th>
                            <th>OrderDateTime</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <div class="col-12 text-center">
                <button id="btn_send"class="btn btn-dark col-6 ">送出訊息</button>
            </div>

        </div>
    </div>
</body>

