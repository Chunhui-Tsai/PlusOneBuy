
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //var Orderlist = ViewData["Orderlist"] as List<FBPlusOneBuy.ViewModels.OrderList>;

}
<body>
    <div class="container-fluid">
        <div class="row">
            <h1 class="ml-3">PlusOneBuy</h1>
        </div>
    </div>
    <div class="container">
        <div id="list" class="row" style="margin: 10px">
            <div class="col-11">
                <table id="ListTable" class="cell-border compact stripe" style="width:100%">
                    <thead>
                        <tr>
                            <th>OrderID</th>
                            <th>CustomerName</th>
                            <th>Keyword</th>
                            <th>ProductName</th>
                            <th>Quantity</th>
                            <th>OrderDateTime</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

@section EndJS
{
    <script src="~/Assets/js/jquery-3.4.1.min.js"></script>
    <script>
        $(document).ready(function () {
            GetData();
        });
        function GetData() {
            $.ajax({
                type: 'post',
                url: '/list/GetAll',
                data: {},
                dataType: "json",
                cache: false,
                success: function (Result) {
                    $('#ListTable tbody').empty();
                    var json = JSON.parse(Result);
                    for (var i=0; i < json.length; i++)
                    {
                        $('#ListTable').append("<tr><td>" + json[i].OrderID + "</td>" +
                            "<td>" + json[i].CustomerName + "</td>" +
                            "<td>" + json[i].Keyword + "</td>" +
                            "<td>" + json[i].ProductName + "</td>" +
                            "<td>" + json[i].Quantity + "</td>" +
                            "<td>" + json[i].OrderDateTime + "</td></tr>")
                    }                   
                }
            }).then(function () {
                setTimeout(GetData, 3000);
            })
        }
        
    </script>
}