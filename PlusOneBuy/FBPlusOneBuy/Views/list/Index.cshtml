@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Main_Layout.cshtml";
    List<FBPlusOneBuy.ViewModels.ProductViewModel> products = ViewData["products"] as List<FBPlusOneBuy.ViewModels.ProductViewModel>;
}

<div class="container bg-light shadow ">
    <div class="row p-3 mt-2">
        <div class="col"></div>
        <div class="col-2">
            <div class="card border-secondary shadow  ">
                <div class="row no-gutters align-items-center">
                    <div class="col m-3">
                        <div class="text-md font-weight-bold text-primary text-uppercase mb-1">觀看人數</div>
                        <div class="h1 mb-0 font-weight-bold text-gray" id="views">0</div>
                    </div>
                    <div class="col-auto m-2">
                        <i class="fas fa-eye fa-2x "></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-2">
            <div class="card border-primary shadow">
                <div class="row no-gutters align-items-center">
                    <div class="col m-3">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">收單數量</div>
                        <div class="h1 mb-0 font-weight-bold text-gray" id="num">
                            0
                        </div>
                    </div>
                    <div class="col-auto m-2">
                        <i class="fas fa-users fa-2x "></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-2">
            <div class="card border-warning shadow">
                <div class="row no-gutters align-items-center">
                    <div class="col m-3">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">收單金額</div>
                        <div class="h1 mb-0 font-weight-bold text-gray" id="money">0</div>
                    </div>
                    <div class="col-auto m-2">
                        <i class="fas fa-dollar-sign fa-2x "></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-2">
            <div class="card border-success shadow">
                <div class="row no-gutters align-items-center">
                    <div class="col m-3">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">成交數量</div>
                        <div class="h1 mb-0 font-weight-bold text-gray" id="Ordernum">0</div>
                    </div>
                    <div class="col-auto m-2">
                        <div><i class="fas fa-sort-amount-up fa-2x"></i></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-2 ">
            <div class="card border-danger shadow">
                <div class="row no-gutters align-items-center">
                    <div class="col m-3">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">成交金額</div>
                        <div class="h1 mb-0 font-weight-bold " id="Ordermoney">0</div>
                    </div>
                    <div class="col-auto m-2">
                        <i class="fas fa-coins fa-2x text-gray"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col"></div>
    </div>
</div>
<div class="container-fluid">
    <div class="row mt-3">
        <div class="col-8">
        </div>
        <div class="col">
            <button id="btn_sentMsg" class="btn btn-primary ">寄送購物車連結</button>
        </div>
        <div class="col">
            <form method="post" action="/list/SetPostEndtime">
                <input name="livePageID" value="@ViewData["livePageID"]" type="hidden" />
                <button type="submit" id="btn_endpost" class="btn btn-dark ">結束本次推播</button><br />
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-5">
            <h3>直播商品</h3>
            <table class="table" style="font-size:14px;">
                <thead>
                    <tr>
                        <th>名稱</th>
                        <th>規格</th>
                        <th>關鍵字</th>
                        <th>價格</th>
                        <th>可售</th>
                        <th>剩餘</th>
                    </tr>
                </thead>
                <tbody>
                    @if (products != null)
                    {
                        for (int i = 0; i < products.Count; i++)
                        {
                            <tr id="s_@products[i].SkuId">
                                <td>@products[i].ProductName</td>
                                <td>@products[i].SkuName</td>
                                <td>@products[i].Keyword</td>
                                <td>@String.Format("{0:N0}", products[i].UnitPrice)</td>
                                <td>@products[i].Qty</td>
                                <td>@products[i].PresetQty</td>
                            </tr>
                        }
                    }


                </tbody>
            </table>
        </div>
        <div class="col">
            <div class="row">
                <div class="col"> <h3>留言清單</h3></div>
                <div class="col">
                    <span>留言關鍵字:@ViewData["keywordPattern"]</span>
                </div>
                <div class="col-12">
                    <table id="ListTable" class="table table-hover">
                        <thead>
                            <tr>
                                <th>顧客名稱</th>
                                <th>關鍵字</th>
                                <th>商品名稱</th>
                                <th>數量</th>
                                <th>留言時間</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

